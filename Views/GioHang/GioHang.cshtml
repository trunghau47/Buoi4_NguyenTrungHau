@model IEnumerable<Buoi4_NguyenTrungHau.Models.GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GioHang</h2>
<p>@ViewBag.ErrorMessage</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.tensach) </th>
        <th>@Html.DisplayNameFor(model => model.hinh) </th>
        <th>@Html.DisplayNameFor(model => model.giaban) </th>
        <th>@Html.DisplayNameFor(model => model.iSoluong) </th>
        <th>@Html.DisplayNameFor(model => model.dThanhtien) </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            
            <td>@Html.DisplayFor(modelItem => item.tensach) </td>
            <td><img src="@item.hinh" width="180" /></td>
            @using (Html.BeginForm("CapNhapGioHang", "GioHang", new { @id = item.masach }))
            {
                <td>@String.Format("{0:0,0}", item.giaban) VNĐ</td>
                
                <td><input type="number" min="1"  name="txtSoLg" value="@item.iSoluong" /></td>
                <td>@Html.DisplayFor(modelItem => item.dThanhtien)</td>
                <td>
                    <a href="@Url.Action("Detail","Sach", new { @id = item.masach })">Chi Tiết</a>
                    |@Html.ActionLink("Xoá", "XoaGioHang", new { @id = item.masach })
                </td>
                <td><input type="submit" value="Cập Nhập" class="btn btn-success" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; color:red; text-align:right">
        <td colspan="2">Số Loại Sách: @ViewBag.ToSoLuongSanPham</td>
        <td colspan="2">Số Lượng Sách: @ViewBag.TongSoLuong</td>
        <td colspan="4">Tổng Tiền: @String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="5">
            @Html.ActionLink("Xoá Giỏ Hàng", "XoaTatCaGioHang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:yellow; text-align:right">
        <td colspan="5">           
            @Html.ActionLink("Thanh Toán", "DatHang", "GioHang",
                 new { onclick = "javascript:buyNow2()" })
                   
        </td>
</table>
<script type="text/javascript">
    function buyNow2(){
        question = confirm("Bạn muốn thanh toán những sản phẩm này?");
        if (question != false) {
            
        alert('Cảm ơn bạn thanh toán sản phẩm')
        }
    }
</script>


